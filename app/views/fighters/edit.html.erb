<div class="container">
  <div class="border rounded mt-5 p-5 text-center">
    <div class="mb-5">
      <h1><i class="fas fa-skull-crossbones"></i> Modify your Fighter <i class="fas fa-skull-crossbones"></i></h1>
      <h4>Modify your fighter !</h4>
    </div>
    <%= simple_form_for [@fighter], url: fighter_path do |f| %>
    <%= f.input :name %>
    <%= f.input :health, collection: (100..150), default: 100 %>
    <%= f.input :power, collection: (10..50) %>
    <%= f.input :photo %>
    <%= f.submit "Update this fighter", class: "btn btn-success" %>
    <% end %>
  </div>
</div>
