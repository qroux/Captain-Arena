<div class="container">
  <div class="border rounded mt-5 p-5 text-center">
    <h1><%= @fight.player.name %> VS <%= @fight.opponent.name %></h1>
    <div>
      <ul class="list-unstyled text-left">
        <h2><%= @fight.player.name %></h2>
        <% @player_turns.each do |player_turn| %>
        <li>- <%= player_turn %> dmg</li>
        <% end %>
      </ul>
      <ul class="list-unstyled text-right">
        <h2><%= @fight.opponent.name %></h2>
        <% @opponent_turns.each do |opponent_turn| %>
        <li>- <%= opponent_turn %> dmg</li>
        <% end %>
      </ul>
    </div>
    <div>
      <h2>Winner : <%= @winner.name %>!</h2>
    </div>
    <div class="btn btn-primary mt-5">
      <%= link_to "Return", fights_path, style: "color: #F4F4F4"  %>
    </div>
  </div>
</div>
