<div class="container">
  <div class="border rounded mt-5 p-5 text-center">
    <h1><%= @fight.player.name %> VS <%= @fight.opponent.name %></h1>
    <div>
      <ul class="list-unstyled text-left">
        <h2><%= @fight.player.name %> -
          <% if @fight.player_weapon.name == "Sword" %>
            <i class="fas fa-utensils"></i>
          <% elsif @fight.player_weapon.name == "Shield" %>
            <i class="fas fa-shield-alt"></i>
          <% else %>
            <i class="fas fa-fist-raised"></i>
          <% end %>
        </h2>
        <% @player_turns.each do |player_turn| %>
        <li>- <%= player_turn %> dmg</li>
        <% end %>
      </ul>
      <ul class="list-unstyled text-right">
        <h2><%= @fight.opponent.name %> -
          <% if @fight.opponent_weapon.name == "Sword" %>
            <i class="fas fa-utensils"></i>
          <% elsif @fight.opponent_weapon.name == "Shield" %>
            <i class="fas fa-shield-alt"></i>
          <% else %>
            <i class="fas fa-fist-raised"></i>
          <% end %>
        </h2>
        <% @opponent_turns.each do |opponent_turn| %>
        <li>- <%= opponent_turn %> dmg</li>
        <% end %>
      </ul>
    </div>
    <div>
      <h2><i class="fas fa-trophy"></i> Winner : <%= @winner.name %> !</h2>
    </div>
    <%= link_to fights_path do %>
      <div class="btn btn-primary mt-5"> Return </div>
    <% end %>
  </div>
</div>
